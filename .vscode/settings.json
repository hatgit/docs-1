{
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        ".prettierignore": "ignore",
    },
    // dont spellcheck emoji shortcodes in *.md
    "spellright.ignoreRegExpsByClass": {
        "markdown": ["/:\\w+:/g"]
    },
    "spellright.language": [
      "en"
    ],
    "spellright.documentTypes": [
      "latex",
      "plaintext",
      "markdown"
    ],
}
